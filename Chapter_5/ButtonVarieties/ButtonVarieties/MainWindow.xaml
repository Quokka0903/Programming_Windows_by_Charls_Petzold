<Window x:Class="ButtonVarieties.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonVarieties"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Not Just a plain old Button anymore" 
                    Background=" Yellow"
                    BorderBrush="Red"
                    BorderThickness="12"
                    Foreground="Blue"
                    FontSize="48"
                    FontStyle="Italic"/>
            <RepeatButton Content="Repeat" />
            <ToggleButton Content="Toggle" />
            <CheckBox Content="CheckBox" />
            <RadioButton Content="Radio 1"/>
            <RadioButton Content="Radio 2"/>
            <RadioButton Content="Radio 3"/>
            <Button>
                <StackPanel>
                    <Image Source="http://www.charlespetzold.com/pw6/PetzoldJersey.jpg"
                           Width="100" />
                    <TextBlock Text="Figure 1"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
